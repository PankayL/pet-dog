/* pages/hometips/hometips.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F8F8;
  /* 设置页面的背景颜色 */
  overflow-x: hidden;
}

/* 页面容器 */
.container {
  padding: 20px;
  /* 外边距 */
  background-color: #f7f7f7;
  /* 柔和的背景色 */
  text-align: center;
}

/* 页眉样式 */
.header {
  border-bottom: 1px solid #ddd;
  /* 较厚的分隔线 */
  width: 100%;
  padding-bottom: 0px;
  /* 增加下边距 */
  margin-bottom: 10px;
  /* 增加与正文的间距 */
}

.title {
  font-size: 20px;
  /* 较大的字体 */
  font-weight: bold;
  color: #333;
  /* 深色字体 */
}

.info-container {
  display: flex;
  /* 使用 Flex 布局 */
  justify-content: space-between;
  /* 元素分布在左右两边 */
  align-items: center;
  /* 垂直居中对齐 */
  padding: 10px;
  /* 给容器添加适当的内边距 */
}

.info {
  font-size: 12px;
  /* 较小的字体 */
  color: #666;
  /* 中性色彩 */
  margin-left: 20rpx;
  margin-right: 55rpx;
}

.content {
  padding: 0rpx;
  width: 90%;
  margin-top: -35rpx;
  margin-left: 45rpx;
  line-height: 1.8;
}

.textword {
  margin-top: -20rpx;
  font-size: 14px;
}




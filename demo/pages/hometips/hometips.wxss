/* 三级标题样式 */
.h3 {
  font-size: 18px;
  /* 三级标题 */
  font-weight: bold;
  margin: 20px 0;
  /* 段前段后间隔 */
  text-align: center;
  /* 三级标题居中 */
  color: #444;
  /* 深色 */
}

/* 段落样式 */
.text {
  margin: 30px 0;
  /* 1.5倍的段前段后间隔 */
}

/* 图像样式 */
.image {
  /* margin: 10px -10px 0 */
  margin-left: -10px;
  margin-top: 10px;
  margin-bottom: 10px;
  max-width: 100%;
  /* 确保图像不超出容器 */
  width: 300px;
  border-radius: 6px;
  /* 圆角 */
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  /* 阴影效果 */
  /* display: flex;
    justify-content: center;
    align-items: center;
    text-align: center; */
  display: inline-block;
}

/* 输入框 */
.input-container {
  position: fixed;
  /* 固定在屏幕底部 */
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #f8f8f8;
  padding: 10px;
  display: flex;
  transition: margin-bottom 3s;
}

.chat-input {
  flex: 1;
  /* 占用大部分空间 */
  padding: 5px;
  border: 1px solid #dcdcdc;
  border-radius: 5px;
}

.send-button {
  margin-left: 10px;
  padding: 5px 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}
/* pages/trend/trend.wxss */
page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #F8F8F8; /* 设置页面的背景颜色 */
    overflow-x: hidden;
  }
/* 
The uppermost region
 */
 .top-container {
    /* 设置轮播图所在区域的背景渐变颜色，从上到下 */
    background: linear-gradient(to bottom, #FFB408, #F8F8F8);
    /* background: linear-gradient(to bottom, #FF69B4, #EECDA3); */
    height: 750rpx;
    margin: -1px;
  }
  .search-container {
    display: flex;
    align-items: center;
    background-color: #F8F8F8;
    padding: 8px;
    border-radius: 15px;
    margin: 15px;
    height: 15px;
    width: 85%;
  }
  .search-input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 14px;
    margin-left: 15px;
    margin-right: 8px;
    /* background-color: #FFB408; */
  }
  .search-icon {
    width: 15px;
    height: 15px;
    margin-left: 10px;
  }
/* 数据列表的格式 */
.list {
    margin-top: 3vh;
}
.item {
    margin-bottom: -30rpx;
}
/* 动态布局 */
.list .item .content-box {
    display: flex;
    margin: 0rpx 30rpx;
    margin-bottom: 5rpx;
}
/* 用户头像 */
.list .item .avimage {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    margin-right: 15rpx;
}
/* 用户昵称 */
.list .item .nickName {
    color: #5D6A8C;
    margin-bottom: 5rpx;
    font-size: 16px;
    font-weight:bold;
}
/* 文案的格式 */
.list .item .content {
    margin-bottom: 10rpx;
    line-height: 1.4em;
    font-size: 15px;
}
/* 时间 删除按钮 评论点赞功能选择 */
.time-del-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15rpx;
}
.time-del-box .left {
    display: flex;
    align-items: center;
}
.time-del-box .left .time {
    margin-right: 20rpx;
    color: #A3A3A3;
    font-size: 10pt;
    width: 50px;
}
.time-del-box .left .delete {
    margin-right: 0rpx;
    color: #A3A3A3;
    font-size: 10pt;
    width: 50px;
}
/* 功能选择 */
.time-del-box .meau-box {
    color: #585858;
    width: 60rpx;
    height: 50rpx;
    border-radius: 10rpx;
    /* margin-right: 10rpx; */
    margin-left: 21vh;
}
.time-del-box .meau-box .meau {
    text-align: center;
    line-height: 38rpx;
    font-size: 20px;
}
.meau-list {
    display: flex;
    position: absolute;
    right: 90rpx;
    width: 220rpx;
    align-items: center;
    justify-content: space-between;
    background-color: #4c4c4c;
    color: #FFF;
    font-size: 10pt;
    padding: 20rpx;
    border-radius: 10rpx;
}
.meau-list .prize {
    display: flex;
}
.meau-list .prize .word {
    margin-left: 10rpx;
}
/* 动态的图片布局 */
.list .item .oneImag {
    width: 80%;
}
.list .item .onesimag {
    margin: 0rpx 5rpx 0rpx 0rpx;
}
/* 视频 */
.list .item .video {
    /* overflow: hidden; */
    width: 220px;
    height: 150px;
}
/* 点赞和评论 */
.priandping {
    background-color: #f7f7f7;
}
.prize-box {
    /* border-bottom: 1rpx solid #CCCCCC; */
    /* margin-top: 10rpx; */
    padding: 5rpx;
}
.priandping .iconImage {
    width: 35rpx;
    height: 35rpx;
    margin-right: 5rpx;
}
.priandping .prize-item {
    color: #74B3E7;
    font-size: 15px;
}
/* 底部分割线 */
.footer {
    /* border: 1px solid #F8F8F8 */
    height: 0.1px;
    background-color: #CCCCCC ;
    margin-top: 20rpx;
}
/* 弹出popup */
.custom-popup {
    padding: 20rpx;
    background-color: #ffffff; /* 设置弹出层的背景颜色 */
    border-top-left-radius: 10rpx; /* 为弹出层设置一些圆角 */
    border-top-right-radius: 10rpx;
  }
  
  .input-row {
    display: flex; /* 使用 Flexbox 布局 */
    align-items: center; /* 垂直居中对齐 */
    padding: 10rpx; /* 给输入行添加一些内边距 */
  }
  
  .input-field {
    flex: 1; /* 输入框占用所有可用空间 */
  }


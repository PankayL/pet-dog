/* 卡片 */
.card-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh; /* 确保容器占满整个屏幕 */
  flex-direction: column;
}

.card {
  background-color: lightgray;
  border: 0px solid gray;
  padding: 10px;
  margin: 10px;
  text-align: center;
  width: 130px;
  height: 60px;
  border-radius: 10%;
}

.card-top {
  display: flex; 
  align-items: center;
  margin-top: -80rpx;
}

.card-bottom {
  display: flex; 
  align-items: center;
}

.card-left {
  align-self: flex-start; /* 对齐到容器的左侧 */
}

.card-right {
  align-self: flex-end; /* 对齐到容器的右侧 */
}


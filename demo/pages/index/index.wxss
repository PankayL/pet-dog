}

.avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 40rpx;
  margin-left: 40rpx;
  margin-bottom: 35rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
}


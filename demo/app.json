  "window": {
    "navigationStyle": "custom",
    "enablePullDownRefresh": true,
    "navigationBarBackgroundColor": "#ffffff",
    "navigationBarTitleText": "舒心宠居",
    "backgroundTextStyle":"dark", 
    "navigationBarTextStyle":"black"
  },
  "tabBar": {
      "borderStyle": "white",
      "selectedColor": "#FF69B4",
      "color": "#333",
      "backgroundColor": "#FFF",
      "position": "bottom",
      "list": [
          {
            "pagePath": "pages/home/home",
            "text": "首页",
            "iconPath": "icon/navigation/home.jpg",
            "selectedIconPath": "icon/navigation/selectedhome.jpg"
          },
          {
            "pagePath": "pages/shop/shop",
            "text": "商城",
            "iconPath": "icon/navigation/shop.jpg",
            "selectedIconPath": "icon/navigation/selectedshop.jpg"
          },
          {
            "pagePath": "pages/chat/chat",
            "text": "消息",
            "iconPath": "icon/navigation/chat.png",
            "selectedIconPath": "icon/navigation/selectedchat.png"
          },
          {
            "pagePath": "pages/trend/trend",
            "text": "动态",
            "iconPath": "icon/navigation/trend.png",
            "selectedIconPath": "icon/navigation/selectedtrend.png"
          },
          {
            "pagePath": "pages/index/index",
            "text": "我的",
            "iconPath": "icon/navigation/me.png",
            "selectedIconPath": "icon/navigation/selectedme.png"
          }
      ]
